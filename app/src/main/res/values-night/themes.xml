<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tachiyomi" parent="Theme.Base">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="colorOnSurface">@color/md_white_1000</item>
        <item name="colorOnBackground">@color/md_white_1000</item>
        <item name="colorSecondaryVariant">@color/neko_green</item>
        <item name="unreadBadgeColor">@color/neko_green</item>
        <item name="colorOnUnreadBadge">@color/md_black_1000</item>
        <item name="colorOnHopper">@color/md_black_1000</item>
    </style>

    <style name="Theme.Tachiyomi.GreyWolf">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray_button</item>
        <item name="colorSecondary">@color/greyWolfSecondary</item>
        <item name="unreadBadgeColor">?attr/colorSecondary</item>
        <item name="colorOnHopper">?attr/colorOnSecondary</item>
        <item name="colorOnUnreadBadge">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Tachiyomi.Strawberries">
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorSecondary">@color/holo_red</item>
        <item name="colorSecondaryVariant">@color/md_red_500</item>
        <item name="colorPrimaryVariant">@color/secondaryChocolateStrawberries</item>
        <item name="background">@color/backgroundChocolateStrawberries</item>
        <item name="colorSurface">@color/backgroundChocolateStrawberries</item>
        <item name="unreadBadgeColor">?attr/colorSecondary</item>
        <item name="colorOnHopper">?attr/colorOnSecondary</item>
        <item name="colorOnUnreadBadge">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Tachiyomi.FlatLime">
        <item name="colorPrimary">@color/primaryLime</item>
        <item name="colorSecondary">@color/secondaryLime</item>
        <item name="colorSecondaryVariant">@color/secondaryLime</item>
        <item name="colorPrimaryVariant">@color/dialogLime</item>
        <item name="colorSurface">@color/backgroundLime</item>
        <item name="background">@color/backgroundLime</item>
        <item name="colorOnSecondary">@color/colorOnLime</item>
        <item name="unreadBadgeColor">?attr/colorSecondary</item>
        <item name="colorOnHopper">?attr/colorOnSecondary</item>
        <item name="colorOnUnreadBadge">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Tachiyomi.Outrun">
        <item name="colorPrimary">@color/outrun_blush</item>
        <item name="colorSecondary">@color/outrun_pink</item>
        <item name="colorSecondaryVariant">@color/md_white_1000</item>
        <item name="colorPrimaryVariant">@color/outrun_dark_purple</item>
        <item name="colorSurface">@color/outrun_black</item>
        <item name="background">@color/outrun_black</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <item name="colorOnUnreadBadge">@color/outrun_black</item>
        <item name="colorOnHopper">?attr/colorOnSecondary</item>
        <item name="unreadBadgeColor">?attr/colorAccent</item>
    </style>


</resources>